
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Layout/LayoutAdmin.cshtml";
}
@using MvcApplication8.Models;
@model IEnumerable<sanpham>





@*<h2 style="text-align:center;width:1121px;font-weight:bold">Sản phẩm</h2>*@

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading" style="text-align:center;font-weight:bold">
                Danh sách sản phẩm
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    @Html.ActionLink("Thêm mới", "Themmoi")
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Ảnh</th>
                                <th>Mã Sản phẩm</th>
                                <th>Tên sản phẩm</th>
                                <th>Gía sản phẩm</th>
                                <th>Camera trước</th>
                                <th>Camera sau</th>
                                <th>Hệ điều hành</th>
                                <th>Cpu</th>
                                @*<th>Ram</th>
                                <th>Bộ nhớ trong</th>
                                <th>Pin</th>
                                <th>Thẻ nhớ</th>
                                <th>Kết nối</th>
                                <th>Sim</th>*@
                                <th>Số lượng sản phẩm</th>
                                <th>Chức năng</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="odd gradeX">
                                    <td>
                                        <img style="height:50px;width:50px" src="~/Hinhanh/hinhanhsp/@item.hinhanh_sp" />

                                    </td>
                                    <td>@item.sanpham_id</td>
                                    <td>@item.sanpham_name</td>
                                    <td>@item.gia_sanpham</td>   
                                    <td>@item.camera_truoc</td>
                                    <td>@item.camera_sau  </td>
                                    <td>@item.he_dieu_hanh</td>
                                    <td>@item.cpu</td>
                                    @*<td>@item.ram</td>
                                    <td>@item.bo_nho_trong</td>
                                    <td>@item.pin</td>
                                    <td>@item.the_nho</td>
                                    <td>@item.ket_noi </td>
                                     <td>@item.sim </td>*@
                                    <td>@item.soluong_sp</td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.sanpham_id })
                                    @Html.ActionLink("Details", "Details", new { id = item.sanpham_id })
                                    @Html.ActionLink("Delete", "Delete", new { id = item.sanpham_id })
                                </td>
                                </tr>
                            }
                            </tbody>
                            </table>
                        </div>
                <!-- /.table-responsive -->
                
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

<style>
    a{
        color:red;
        /*font-size:16px;*/
    }
    a:hover{
        color:blue;
    }
</style>