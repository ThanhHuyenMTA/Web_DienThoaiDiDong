@model IEnumerable<MvcApplication8.Models.khachhang>


@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Layout/LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading" style="text-align:center;font-weight:bold">
                Danh sách khách hàng
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    @Html.ActionLink("Thêm mới", "Themmoi")
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.khachhang_id)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.khachhang_name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.khachhang_ns)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.khachhang_diachi)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.khachhang_sdt)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.khachhang_taikhoan)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model =>model.khachhang_matkhau)
                                </th>
                                <th>Chức năng</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="odd gradeX">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.khachhang_id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.khachhang_name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.khachhang_ns)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.khachhang_diachi)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.khachhang_sdt)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.khachhang_taikhoan)
                                    </td>
                                    <td >
                                        @Html.DisplayFor(modelItem => item.khachhang_matkhau)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { makh=item.khachhang_id }) |
                                        @Html.ActionLink("Details", "Details", new {makh=item.khachhang_id }) |
                                        @Html.ActionLink("Delete", "Delete", new { makh=item.khachhang_id })
                                    </td>
                                    
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

<style>
    a {
        color: red;
        /*font-size:16px;*/
    }

        a:hover {
            color: blue;
        }
</style>



