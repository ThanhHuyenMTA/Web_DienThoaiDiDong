@model IEnumerable<MvcApplication8.Models.sanpham>

@{
    ViewBag.Title = "Dienthoai";
    Layout = "~/Areas/Admin/Views/Layout/LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading" style="text-align:center;font-weight:bold">
                Danh sách điện thoại
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    @Html.ActionLink("Thêm mới", "Themmoi")
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>     
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.sanpham_id)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.hinhanh_sp)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.sanpham_name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.gia_sanpham)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.soluong_sp)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.theloai_id)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.camera_truoc)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.camera_sau)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.he_dieu_hanh)
                                </th>
                                @*<th>
                                    @Html.DisplayNameFor(model => model.cpu)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ram)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.bo_nho_trong)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.the_nho)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.sim)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ket_noi)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.pin)
                                </th>*@
                                <th>
                                    @Html.DisplayNameFor(model => model.moi)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.style)
                                </th>
                                <th>Chức năng</th>
                            </tr>
                        </thead>
                        <tbody>
                             @foreach (var item in Model)
                            {
                                <tr class="odd gradeX">
                                   
                                    <td>
                                        @Html.DisplayFor(modelItem => item.sanpham_id)
                                    </td>
                                    <td>
                                        <img style="height:50px;width:50px" src="~/Hinhanh/hinhanhsp/@item.hinhanh_sp" />

                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.sanpham_name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.gia_sanpham)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.soluong_sp)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.theloai_id)
                                    </td>                                 

                                    <td>
                                        @Html.DisplayFor(modelItem => item.camera_truoc)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.camera_sau)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.he_dieu_hanh)
                                    </td>
                                    @*<td>
                                        @Html.DisplayFor(modelItem => item.cpu)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ram)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.bo_nho_trong)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.the_nho)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.sim)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ket_noi)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.pin)
                                    </td>*@

                                    <td>
                                        @Html.DisplayFor(modelItem => item.moi)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.style)
                                    </td>
                                    
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.sanpham_id })
                                        @Html.ActionLink("Details", "Details", new { id = item.sanpham_id })
                                        @Html.ActionLink("Delete", "Delete", new { id = item.sanpham_id })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

